build-type:          Simple
extra-source-files:  README, ChangeLog.md
cabal-version:       >=1.10

Flag late-spec
  Description: Enables a late-specialisation pass
  Default: False

executable benchmarks
  main-is:             Main.hs
  other-modules: Logic
                 GenericLensExamples
                 HandExamples
                 Types

  -- other-extensions:
  ghc-options: -O2 -fexpose-all-unfoldings -fforce-recomp
  if flag(late-spec)
    ghc-options: -fplugin=Plugin
  build-depends:       base >=4.10 && <4.15
                     , random >=1.0
                     , deepseq
                     , plugin
                     , mtl

  hs-source-dirs:      .
  default-language:    Haskell2010
